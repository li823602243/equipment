/* junfeipage/setting/accountmag/accountmag.wxss */

.add-account {
  background: #fff;
  width: 100%;
  border-bottom: 1px solid #eee;
  line-height: 120rpx;
  height: 120rpx;
}

.account-item image, .add-account image {
  width: 90rpx;
  height: 90rpx;
  display: inline-block;
  border-radius: 50%;
  margin-left: 20rpx;
  vertical-align: middle;
}

.account-item text, .add-account text {
  display: inline-block;
  vertical-align: middle;
  margin-left: 20rpx;
  font-size: 36rpx;
}

view {
  box-sizing: border-box;
}

.item-box {
  width: 100%;
  margin: 0 auto;
  padding-bottom: 30rpx;
}

.items {
  width: 100%;
}

.item {
  position: relative;
  border-top: 2rpx solid #eee;
  height: 120rpx;
  line-height: 120rpx;
  overflow: hidden;
}

.selecticon {
  margin-left: -15px;
  margin-bottom: -40px;
}

.notselected {
  display: none;
}

.item:last-child {
  border-bottom: 2rpx solid #eee;
}

.inner {
  position: absolute;
  top: 0;
}

.inner.txt {
  background-color: #fff;
  width: 100%;
  z-index: 5;
  padding: 0 10rpx;
  transition: left 0.2s ease-in-out;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.inner.del {
  background-color: #e64340;
  width: 180rpx;
  text-align: center;
  z-index: 4;
  right: 0;
  color: #fff;
}

.item-icon {
  width: 90rpx;
  vertical-align: middle;
  margin-right: 16rpx;
  height: 90rpx;
  border-radius: 50%;
}

.thumb {
  width: 200px;
  height: 200px;
  -webkit-overflow-scrolling: touch;
  overflow: scroll;
}

.loginout {
  margin-top: 20%;
  background: #468ceb;
  text-align: center;
  padding: 15px;
  color: #fff;
}
