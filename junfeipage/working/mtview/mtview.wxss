.mt-navbar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: relative;
  margin-bottom: 5px;
  z-index: 500;
  top: 0;
  width: 100%;
  border-bottom: 1rpx solid #CCCCCC;
}
.mt-navbar__item {
  position: relative;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding-top:5px;
  text-align: center;
  font-size: 0;
}
.mt-navbar__item.mt-bar__item_on label,.mt-navbar__item.mt-bar__item_on text {
  color: #468ceb;
}
.mt-navbar__slider {
  position: absolute;
  content: " ";
  left: 0;
  bottom: 0;
  width: 40px;
  height: 3px;
  background-color: #468ceb;
  -webkit-transition: -webkit-transform .3s;
  transition: -webkit-transform .3s;
  transition: transform .3s, -webkit-transform .3s;
}
.mt-navbar__title {
  display:inline-block;
    font-size:15px;
    max-width:8em;
    width:auto;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
    word-wrap:normal;
    margin-bottom:4px;
    color: #333;

}
.mt-tab {
  position: relative;
  height: 100%;
}
