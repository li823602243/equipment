/* junfeipage/message/index.wxss */

.message-items {
  background: #fff;
  border-radius: 5px;
  width: 95%;
  margin: 10px auto;
  position: relative;
}

.message-title {
  font-weight: bolder;
  font-size: 16px;
  padding: 10px 10px 0 10px;
  display: block;
}

.message-time {
  font-size: 12px;
  color: #b5b5b5;
  padding: 0 0 20px 10px;
}

.message-item {
  width: 90%;
  padding: 0 0 5px 10px;
  font-size: 14px;
}

.message-item label {
  color: #b5b5b5;
  display: inline-block;
  width: 25%;
}

.message-item text {
  color: #468ceb;
  display: inline-block;
  width: 70%;
  vertical-align: top;
}

.message-footer {
  width: 100%;
  border-top: 1px solid #eee;
}

.message-footer text {
  float: left;
  padding: 5px 10px;
}

.message-footer image {
  width: 20px;
  height: 20px;
  float: right;
  padding: 5px;
  
}

.message-delete {
  position: absolute;
  background: rgba(0, 0, 0, 0.8);
  border-radius: 10px;
  color: #fff;
  top: 10%;
  z-index: 999;
  left: 45%;
  padding: 5px 10px;
}
